            <body  header="nlheader" header-height="16%" footer="nlfooter" footer-height="5%" size="LETTER-LANDSCAPE" margin-top="-3px" >
             
                   <table width="100%">  
                 <thead>
                                <tr style="page-break-inside: auto;" >

                                <th align="center" border-right="0.5" border-bottom="0.5" border-top="0.5" border-left="0.5">ลำดับที่</th>
                                   <th colspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">ใบกำกับภาษี</th>
                                   <th rowspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">ชื่อผู้ซื้อสินค้า / ผู้รับบริการ</th>
                                    <th rowspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">เลขประจำตัวผู้เสียภาษีอากร<br/>ของผู้ซื้อสินค้า /ผู้รับบริการ</th>
                                     <th rowspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">สถาน <br/>ประกอบการ</th>
                                       <th rowspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">มูลค่าของสินค้า <br/>หรือบริการ</th>
                                        <th rowspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">จำนวนเงิน <br/>ภาษีมูลค่าเพิ่ม</th>
                                         <th rowspan="2" align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">หมายเหตุ</th>
                                 
                                </tr>
                                <tr style="page-break-inside: auto;" >
                                  <th border-right="0.5" border-bottom="0.5" border-top="0.5" border-left="0.5"> </th>
                                   <th align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">วัน เดือน ปี</th>
                                  <th align="center" border-right="0.5" border-bottom="0.5" border-top="0.5">ลขที่เอกสาร</th>
                                </tr>
                              </thead>
                            

                             <tbody>

                               <#assign count = 0>
                                <#list ds.tranDataLines as item>
                                <#assign count = count + 1>
                                <tr border-bottom="0.5">
                                  <td align="center" border-right="0.5" border-left="0.5"></td>
                                  <td align="center" border-right="0.5">${item.trandate}</td>
                                  <td align="center" border-right="0.5">${item.DocNumber}</td>
                                  <td align="center" border-right="0.5">${item.customerName}</td>
                                  <td align="center" border-right="0.5">${item.customerTaxRegId}</td>
                                  <td align="center" border-right="0.5">${item.customerEntityBranch}</td>
                                  <td align="center" border-right="0.5">${item.totalBillAmountWithOutVat}</td>
                                  <td align="center" border-right="0.5">${item.totalVatAmountPerBill}</td>
                                  <td align="center" border-right="0.5">${item.whtMemo}</td>
                                </tr>
                                </#list>
                              </tbody>
                             <tfoot>
                               <tr border-bottom="0.5">
                              
                                  <td align="right" border-right="0.5" border-left="0.5" colspan="6" >รวม</td>
                                  <td align="center" border-right="0.5">${ds.totalAmountWithOutVat}</td>
                                  <td align="center" border-right="0.5">${ds.totalVatAmountPerBill}</td>
                                  <td align="center" border-right="0.5"></td>
                                  
                               </tr>
                             </tfoot>
                              
                 </table>

